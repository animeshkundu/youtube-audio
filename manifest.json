{
  "name": "Youtube Audio",
  "version": "0.0.2.5",
  "manifest_version": 2,
  "description": "Stream only Audio on Youtube",
  "homepage_url": "https://github.com/animeshkundu/youtube-audio",
  "icons": {
    "38": "img/icon38.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": [
      "js/global.js"
    ]
  },
  "permissions": [
    "tabs",
    "webRequest",
    "*://*.youtube.com/*",
    "*://*.ggpht.com/*",
    "*://*.googlevideo.com/*",
    "*://i.ytimg.com/*",
    "webRequestBlocking",
    "storage"
  ],
  "browser_action": {
    "default_title": "Youtube Audio"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "*://*.youtube.com/*",
        "*://*.youtube-nocookie.com/*"
      ],
      "js": [
        "js/youtube_audio.js"
      ],
      "css": [
        "css/youtube_audio.css"
      ],
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "html/options.html",
    "browser_style": true,
    "chrome_style": true
  }
}
